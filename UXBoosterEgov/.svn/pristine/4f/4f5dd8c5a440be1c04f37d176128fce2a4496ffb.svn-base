                {
                    this.dsDocumentGroup.set_rowposition(nRow);
                    this.fv_sFolderDel = "N";
                    this.fnSearch('List');
            });
            break;
        case "DeleteDir" : //삭제 콜백
            take.alert(this, "Info", "폴더 삭제가 정상 처리 되었습니다.");
            this.fnSearch('Group');
